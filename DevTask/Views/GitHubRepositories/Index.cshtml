@model List<GitHubRepository>

<h1>Repo Details</h1>

@if (Model != null)
{
    @foreach (var repo in Model)
    {
        if (repo.User != null)
        {
            <img src="https://github-readme-stats.vercel.app/api/pin/?username=@(repo.User.GitHubUsername)&repo=@(repo.Name)" />
            <p>Tasks: @repo.Tasks.Count</p>
        }
        else
        {
            <p>User information not available for repository: @(repo.Name)</p>
        }
    }
}